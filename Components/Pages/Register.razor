@page "/register"

@using TaskerBC.Models.Auth

@inject NavigationManager Nav

<div class="container">
    <div class="d-flex justify-content-center align-items-center">
        <div class="card">
            <div class="header">
                <h3>Register</h3>
            </div>
            <div class="card-body">
                <EditForm Model="registerRequest" class="vstack gap-3">
                    <DataAnnotationsValidator />
                    <label class="form-label">
                        Email
                        <InputText @bind-Value="registerRequest.Email" class="form-control"></InputText>
                        <ValidationMessage For="() => registerRequest.Email"></ValidationMessage>
                    </label>
                    <label class="form-label">
                        Password
                        <InputText @bind-Value="registerRequest.Password" type="password" class="form-control"></InputText>
                        <ValidationMessage For="() => registerRequest.Password"></ValidationMessage>
                    </label>
                    <label class="form-label">
                       Confirm Password
                        <InputText @bind-Value="registerRequest.Password" type="password" class="form-control"></InputText>
                        <ValidationMessage For="() => registerRequest.Password"></ValidationMessage>
                    </label>
                    <div class="d-flex justify-content-evenly">
                        <button class="btn btn-primry" type="submit">Register</button>
                        <a href="register" class="btn btn-outline-secondary">Login</a>
                    </div>
                </EditForm>
            </div>
            <div>
                <div class="text-center text-danger mt-4">
                    @errorMessage
                </div>
            </div>
        </div>
    </div>
</div>

@code {

    private RegisterRequest registerRequest = new RegisterRequest();
    private string errorMessage = string.Empty;
}
